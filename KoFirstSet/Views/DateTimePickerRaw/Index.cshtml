@{
    ViewBag.Title = "Index";
}

<style type="text/css">
    input[type=text].dateTime {
        width: 10em;
    }
</style>
<div class="container-fluid">
    <div class="page-header">
        <h1>Bootstrap DateTimePicker Knockout binding test</h1>
    </div>

    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-4" for="dateSelector">Select a date</label>
            <div class="col-sm-8">
                <input id="dateSelector" style="display: inline-block" type="text" class="form-control dateTime" />
                <input id="dateSelector2" style="display: inline-block" type="text" class="form-control dateTime" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4">Selected date</label>
            <div class="col-sm-8">
                <p class="form-control-static" id="target"></p>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/moment_i18n/pl.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>

<script src="~/dist/MyApp/Scripts/DateTimePickerRaw_Index.js" type="text/javascript"></script>
