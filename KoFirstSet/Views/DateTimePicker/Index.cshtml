<div class="container-fluid">
    <div class="page-header">
        <h1>Bootstrap DateTimePicker Knockout binding test</h1>
    </div>

    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-4" for="dateSelector">Select a date</label>
            <div class="col-sm-8">
                <input id="dateSelector" type="text" class="form-control dateTime"  />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4">Selected date</label>
            <div class="col-sm-8">
                <p class="form-control-static" ></p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4" for="minDateSelector">Select the minimum date</label>
            <div class="col-sm-8">
                <input id="minDateSelector" type="text" class="form-control dateTime"  />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4" for="minDateSelector">Select the maximum date</label>
            <div class="col-sm-8">
                <input id="maxDateSelector" type="text" class="form-control dateTime"  />
            </div>
        </div>
    </div>
</div>

