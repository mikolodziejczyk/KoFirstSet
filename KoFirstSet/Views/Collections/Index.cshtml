            </tr>
        </thead>
    </table>

    <div class="row">
        <div class="col-sm-1">
            <button class="btn btn-primary">Add first</button>
        </div>
        <div class="col-sm-1">
            <button class="btn btn-primary">Remove first</button>
        </div>
        <div class="col-sm-1">
            <button class="btn btn-primary">Remove last</button>
        </div>
        <div class="col-sm-1">
            <button class="btn btn-primary">Clear</button>
        </div>
    </div>

</div>

